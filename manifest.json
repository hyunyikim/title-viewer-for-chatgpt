{
  "manifest_version": 3,
  "name": "Title Viewer for ChatGPT",
  "version": "1.0",
  "description": "Displays the conversation title in ChatGPT even when the sidebar is folded.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
